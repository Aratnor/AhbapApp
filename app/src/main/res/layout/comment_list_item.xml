<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <de.hdodenhof.circleimageview.CircleImageView
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:id="@+id/comment_user_image"
        android:layout_marginTop="8dp"
        android:layout_marginStart="16dp"
        android:layout_marginBottom="8dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/comment_user_name"
        android:layout_alignTop="@id/comment_user_image"
        android:layout_toEndOf="@id/comment_user_image"
        android:layout_marginStart="8dp"
        android:ellipsize="end"
        android:maxLines="1"
        android:text="User Name"
        android:textColor="@color/colorBlackTransparent"
        android:textStyle="bold"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/comment_date"
        android:layout_alignTop="@id/comment_user_image"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="8dp"
        android:text="04/04/2018"
        android:textSize="10sp"/>

    <ImageView
        android:id="@+id/message_image"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:src="@drawable/ic_mail_white_24dp"
        android:tint="@color/colorBlack"
        android:layout_alignTop="@id/comment_user_name"
        android:layout_toEndOf="@id/comment_user_name"
        android:layout_marginStart="4dp"
        android:paddingEnd="4dp"
        android:paddingBottom="4dp"
        android:paddingStart="4dp"
        android:background="?attr/selectableItemBackgroundBorderless"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/comment_body"
        android:layout_below="@id/comment_user_name"
        android:layout_toEndOf="@id/comment_user_image"
        android:layout_marginTop="2dp"
        android:layout_marginStart="8dp"
        android:layout_marginBottom="4dp"
        android:layout_marginEnd="8dp"
        android:text="Lorem Ipsum has been the industry's standard dummy text ever since the 1500s, when an unknown printer took a galley Lorem Ipsum is simply dummy text of the printing and typesetting industry."
        android:textColor="@color/colorBlackTransparent"/>

</RelativeLayout>